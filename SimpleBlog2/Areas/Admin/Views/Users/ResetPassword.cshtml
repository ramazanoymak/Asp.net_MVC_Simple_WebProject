@model SimpleBlog2.Areas.Admin.ViewModels.UsersResetPassword
<h1>Reset Password for User : @Model.Username</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    
     <div class="form-group">
        @Html.LabelFor(x=>x.Password)
        @Html.TextBoxFor(x => x.Password, new {@class="form-control"})
    </div>
    
  
    <input type="submit" class="btn btn-primary" value="Reset Password" /> <a href="@Url.Action("index")"> or cancel</a>

}  

    
    
