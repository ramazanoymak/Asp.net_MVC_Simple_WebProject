@model SimpleBlog2.Areas.Admin.ViewModels.PostsIndex

<h1>Posts</h1>


<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i>Create Post</a>
    </div>
    <div class="btn-group pull-right">

        @if (Model.Posts.HasPreviousPage){
            <a href="@Url.Action("index", new { page=@Model.Posts.PreviousPage})" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-chevron-left"></i> Previous Page</a>
        }
        else{
          <a  href="#" class="btn btn-sm disabled btn-primary" > Previous Page</a>
        }

         @if (Model.Posts.HasNextPage){
            <a href="@Url.Action("index", new { page=@Model.Posts.NextPage})" class="btn btn-sm btn-primary"> Next Page<i class="glyphicon glyphicon-chevron-right"></i></a>
        }
        else{
          <a  href="#" class="btn btn-sm disabled btn-primary" > Next Page</a>
        }
    </div>

   </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Tags</th>
            <th>Date</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts._currentItems)
        {
            var cls = "";
            if (post.isDeleted)
            {
                cls = "danger";
                    
            }
                
            
            <tr class="@cls">
                <td>@post.Title</td>
                <td>@post.User.Username</td>
                <td>TODO</td>
                <td>@post.CreatedAt</td>
                <td>
                    <a href="@Url.Action("edit", new { id=@post.Id})" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-edit"></i>Edit</a>
                    
                    @if (!post.isDeleted)
                    {
                        <div class="btn-group btn-xs">
                            <a href="@Url.Action("trash", new { post.Id})" class="btn btn-danger" data-posts="Are you use you want to trash this post?">
                                <i class="glyphicon glyphicon-remove"></i>
                                Trash
                            </a>
                            
                            <a href="@Url.Action("delete", new { post.Id})" class="btn btn-primary" data-posts="Are you use you want to delete this post Forever?">
                                        <i class="glyphicon glyphicon-remove "></i>delete
                            </a>
                        
                             </div>
                    }
                    else
                    {
                       <a href="@Url.Action("restore",new {post.Id})" class="btn btn-xs btn-success" data-posts="Are you use you want to restore this post?" >
                            <i class="glyphicon glyphicon-plus-sign"></i>restore
                       </a>
                    }

                </td>
            </tr>
        }
        
    </tbody>
</table>
    